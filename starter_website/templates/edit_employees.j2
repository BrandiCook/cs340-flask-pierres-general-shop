<html>
<!-- Adapted from https://github.com/osu-cs340-ecampus/flask-starter-app -->
<head>
	<title>Edit Employees</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>

    <div id="edit">
        <!-- form to edit data in Employees-->
        <form id="editEmployee" action="/edit_employees/{{data[0].employeeID}}" method="post">
            <legend><strong>Edit Employee</strong></legend>
            <fieldset>

                    <input type="hidden" value="{{data[0].employeeID}}" class="form-control" id="employeeID" name="employeeID" required>
                    <label for="make">Employee Name:</label>

                    <input type="text" value="{{data[0].employeeName}}" class="form-control" id="employeeName" name="employeeName" pattern="[[a-zA-Z0-9\s]{1,}" required>
                    <label for="model">Employee Salary:</label>


                    <input type="text" value="{{data[0].employeeSalary}}"class="form-control" id="employeeSalary" name="employeeSalary" pattern="[0-9]{1,}" placeholder="" required> 

            </fieldset>
            <input type="submit" value="Edit Employee" name="Edit_Employee" class="btn btn-primary" style="margin:.5rem;">
            <a href='/employees'><input class="btn" type="button" value="cancel"></a>
        </form>
    </div>

</body>
</html>